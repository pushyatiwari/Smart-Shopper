<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_margin="8dp"
    tools:context=".Fragments.homefragment_base">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="5dp"
            android:elevation="10dp">
        <ImageView
            android:id="@+id/home_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"

           />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txthome_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/textColor"
            android:hint="guide"
            android:background="@color/lightest_blue"
            android:textSize="25dp" />

        <Button
            android:id="@+id/home_takepic_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_marginTop="50dp"
            android:text="Click here to take picture of ingredients" />

    </LinearLayout>


</FrameLayout>