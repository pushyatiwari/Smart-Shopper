<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_margin="8dp"
    tools:context=".Fragments.homefragment_base">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="5dp"
            android:elevation="10dp">
        <ImageView
            android:id="@+id/home_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"

           />
            <ProgressBar
                android:id="@+id/pgbar"
                style="@android:style/Widget.Holo.Light.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txthome_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/textColor"
            android:hint="guide"
            android:visibility="invisible"
            android:background="@color/lightest_blue"
            android:textSize="25dp" />
<LinearLayout
    android:layout_marginTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:weightSum="3"
    android:elevation="25dp"
    >
        <Button
            android:id="@+id/home_takepic_btn"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:textColor="@color/white"
            android:ems="10"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:layout_weight="1.4"
            android:text="Scan ingredients" />
    <View
        android:layout_width="12dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_weight="0.2"
        />
    <Button
        android:id="@+id/home_takepic_searchfood"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:ems="10"
        android:layout_gravity="center"
        android:layout_weight="1.4"
        android:background="@drawable/custom_button"
        android:text="Search Food" />


</LinearLayout>

    </LinearLayout>


</LinearLayout>